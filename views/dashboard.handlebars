<style>
    /* Custom CSS for circles */
    .circle {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        display: inline-block;
        margin-top: 50px;
        margin-right: 20px;
        display: inline-flex;
        /* Flexbox center content */
        justify-content: center;
        /* Horizontally center content */
        align-items: center;
        /* Vertically center content */
    }

    /* Apply padding to the second circle on medium and larger screens */
    @media (min-width: 640px) {
        .circle:nth-child(2) {
            margin-top: 200px;
        }
    }

.hide {
    display: none;
}

.brainpattern {
background-image: url('/css/assets/dashboardbg.png');
background-repeat: repeat;
}

    .sidebar {
        width: 0;
        position: fixed;
        top: 0;
        right: -250px;
        /* Start offscreen to the right */
        height: 100%;
        background-color: #ff69b4;
        /* Pink */
        overflow-x: hidden;
        transition: 0.3s;
        z-index: 1;
    }

    .sidebar.show {
        right: 0;
        /* Slide in from the right */
    }

    .sidebar-content {
        padding: 20px;
        color: white;
    }

   /* .logout-button {
        position: absolute;
        bottom: 20px;
        right: 5px;
    }*/
</style>

<body class="brainpattern bg-pink-100">
    <div class="min-h-screen flex flex-col justify-center items-center">

    <form action="" method="POST">    
        <div class="bg-pink-500 rounded-lg p-6 shadow-md w-80 text-center">
            <div class="bg-pink-400 block text-lg font-semibold mb-2 project-title" contenteditable="true">{{title}}
            </div>
        </div>

        <!-- Circles Container -->
        <div class="flex flex-col sm:flex-row lg:space-x-20 md:space-x-10 sm:space-x-5">
            <!-- Circle 1 -->
            <div id="userstorycircle" class="circle bg-pink-400 rounded-full flex items-center justify-center cursor-pointer">
                <div id="circle1">
                    <div class="title text-white text-center font-semibold">Acceptance Criteria</div>
                    <div id="usercriteria" class="hide text-white text-center font-semibold">{{acceptance_criteria}} test</div>
                </div>
            </div>

            <div id="wireframecircle" class="circle bg-pink-400 rounded-full flex items-center justify-center cursor-pointer">
                <div id="circle2">
                    <div class="title text-white text-center font-semibold">Wireframe</div>
                    <div id="userwireframe" class="hide text-white text-center font-semibold">{{wireframe_link}} test</div>
                </div>
            </div>

            <!-- Circle 3 -->
            <div id="notescircle" class="circle bg-pink-400 rounded-full flex items-center justify-center cursor-pointer">
                <div id="circle3">
                    <div class="title text-white text-center font-semibold">Notes</div>
                    <div id="usernotes" class="hide text-white text-center font-semibold">{{note}} test</div>
                </div>
            </div>
        </div>
    </div>
</form>
    <!-- Clickable Icon to Open Sidebar -->
    <div id="sidebar" class="fixed top-0 right-0 m-4 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
            class="w-6 h-6 text-pink-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>


        <!-- Sidebar -->
        <div id="sidebar-content"
            class="sidebar fixed top-0 right-0 h-screen bg-gradient-to-b from-pink-200 overflow-y-auto">
            <div class="p-4">
                <!-- Unique styling for "Saved Projects" -->

                <!--PJ's CODE-->
                <div id="addNew" class="bg-pink-500 text-white px-4 py-2 rounded-md mb-4">
                    <h2 class="text-2xl font-semibold">New Project+</h2>
                </div>
                <!--////////////////-->

                <div class=" text-pink-800 px-4 py-1 mb-4 text-center">
                    <h2 class="text-2xl text-center font-semibold">Saved Projects</h2>
                </div>

                <!-- List of Saved Projects (Can populate this dynamically) -->
                <ul class="text-center">
                    <li class="mb-2"><a href="#" class="text-pink-800 hover:underline">{{mindmaps.title}}Project 1</a></li>
                    <li class="mb-2"><a href="#" class="text-pink-800 hover:underline">Project 2</a></li>
                    <li class="mb-2"><a href="#" class="text-pink-800 hover:underline">Project 3</a></li>
                </ul>

                <!-- Logout Button -->
                <div class="mt-4 pb-2 absolute bottom-0 w-11/12">
                    <button id="logout" class="bg-pink-500 hover:bg-pink-600 text-white text-2xl text-center font-semibold rounded-md py-2 w-full"
                        onclick="">Logout</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="/js/homepage.js"></script>
        <script src="/js/logout.js"></script>
</body>

</html>